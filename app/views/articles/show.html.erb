
<div class="container">
<div class="jumbotron">


<h3>
<%= @article.title %>
</h3>

<p>
<%= @article.text %>
</p>

<% pre_like = @article.likes.find { |like| like.user_id == current_user.id} %>
<% if pre_like %>

  <%= link_to article_like_path(@article, pre_like),
         method: :delete do %> <i class="fa fa-thumbs-o-down fa-2x" aria-hidden="true"></i>
            <% end %>
<% else %>
  <%= link_to article_likes_path(@article), 
        method: :article do %> <i class="fa fa-thumbs-o-up fa-2x" aria-hidden="true"></i>
            <% end %>
<% end %>

<p><%= @article.likes.count %> <%= (@article.likes.count) == 1 ? 'Like' : 'Likes'%></p>
</div>

<h3>Comments</h3>
<div class="jumbotron">
<%= render @article.comments %>
</div>

<h3>Add a comment:</h3>
<div class="jumbotron">
<%= render 'comments/form' %>
</div>


<%= link_to articles_path do %><i class="fa fa-reply fa-2x m-2"></i> <% end %>
<%= link_to edit_article_path(@article) do %><i class="fa fa-retweet fa-2x m-2"></i> <% end %>

</div>