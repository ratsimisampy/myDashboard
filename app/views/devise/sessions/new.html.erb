<div class="container">

<h2>Log in ooo</h2>
<div class="jumbotron">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>        

    <div class="field">
      <%= f.label :email, class:"mt-3" %><br />
      <%= f.email_field :email, autofocus: false, autocomplete: "email", class: "form-control col-sm-3" %>
    </div>

    <div class="field">
      <%= f.label :password, class:"mt-3" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control col-sm-2" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me, class:"mt-3" %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
<%= render "devise/shared/links" %>
</div>